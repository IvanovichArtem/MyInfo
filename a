# Средняя цена по кластерам на обучении
geo_avg_map = X_train.groupby("minsk_geo_cluster_price")[TARGET].mean()

# Добавляем в train
X_train["geo_avg_target"] = X_train["minsk_geo_cluster_price"].map(geo_avg_map)

# И применяем ту же статистику к valid
X_valid["geo_avg_target"] = X_valid["minsk_geo_cluster_price"].map(geo_avg_map)
